<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.fetch2.LoginStudent">

    <EditText
        android:id="@+id/email_teacher"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Email "/>

    <EditText
        android:id="@+id/password_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/email_teacher"
        android:layout_alignRight="@id/email_teacher"
        android:layout_below="@+id/email_teacher"
        android:layout_marginTop="31dp"
        android:inputType="number"
        android:hint="Roll No" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_teacher"
        android:layout_alignStart="@+id/email_teacher"
        android:layout_below="@+id/password_teacher"
        android:layout_marginTop="18dp"
        android:text="Remember Me" />

    <Button
        android:id="@+id/tlogin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="onClick"
        android:text="Login" />

</RelativeLayout>